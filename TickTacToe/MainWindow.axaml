<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TickTacToe.MainWindow"
        Title="TickTacToe">
        
    <Grid ShowGridLines="True">
        <!-- Define a 3x3 Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Colorful Buttons -->
        <Button Name="TL" Content="X" Grid.Row="0" Grid.Column="0" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize= "18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button Name="TM" Content="" Grid.Row="0" Grid.Column="1" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button Name="TR" Content="" Grid.Row="0" Grid.Column="2" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

        <Button Name="ML" Content="" Grid.Row="1" Grid.Column="0" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button Name="MM" Content="" Grid.Row="1" Grid.Column="1" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button Name="MR" Content="" Grid.Row="1" Grid.Column="2" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

        <Button Name="BL" Content="" Grid.Row="2" Grid.Column="0" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button Name="BM" Content="" Grid.Row="2" Grid.Column="1" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button Name="BR" Content="" Grid.Row="2" Grid.Column="2" Margin="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightSeaGreen" Foreground="White" FontSize="18"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
    </Grid>
</Window>
